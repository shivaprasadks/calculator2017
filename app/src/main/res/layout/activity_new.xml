<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_1"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="3.0"
        android:background="@color/display"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="3.0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStep"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="left|center" />

                <TextView
                    android:id="@+id/tvMemory"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.0"
                    android:background="#ffffffff"
                    android:gravity="center"
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/tvCheck"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="CHK"
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/tvCorrect"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="CRT"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.4"
                android:orientation="horizontal"
                >

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.0"
                    android:gravity="end|center" />

                <TextView
                    android:id="@+id/tvOperation"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.0"
                    android:gravity="right|center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="3.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAnswer"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="9.0"
                    android:gravity="end|center"
                    android:text="DEC" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/display_below"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/optionButton"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@android:drawable/ic_menu_sort_by_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="CITIZEN"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ct512"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:text="CT - 512"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonCheckRight"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_margin="2.0dip"
            android:layout_weight="0.5"
            android:scaleType="fitXY"
            android:src="@drawable/checkbutton" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="0.1" />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2.0dip"
            android:layout_weight="0.5"
            android:scaleType="fitXY"
            android:background="@drawable/correctbutton" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="0.1" />

        <ImageButton
            android:id="@+id/buttonAllClear"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2.0dip"
            android:layout_weight="0.3"
            android:background="@drawable/button_green"
            android:scaleType="fitXY"
            android:src="@drawable/onbutton"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginBottom="30dp"
        android:layout_weight="6.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonMarkUp"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.4"
                android:background="@drawable/button_citizen_2"
                android:text="MU"
                android:textColor="@color/button_black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button7"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="7"
                android:textColor="@color/button_white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="8"
                android:textColor="@color/button_white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="9"
                android:textColor="@color/button_white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonPercentage"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="%"
                android:textColor="@color/button_white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonPlusMinus"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.4"
                android:background="@drawable/button_citizen_2"
                android:text="+/-"
                android:textColor="@color/button_black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="4"
                android:textColor="@color/button_white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="5"
                android:textColor="@color/button_white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="6"
                android:textColor="@color/button_white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="X"
                android:textColor="@color/button_white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSqrt"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.4"
                android:background="@drawable/button_citizen_2"
                android:text="√"
                android:textColor="@color/button_black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="1"
                android:textColor="@color/button_white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="2"
                android:textColor="@color/button_white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="3"
                android:textColor="@color/button_white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_citizen"
                android:text="÷"
                android:textColor="@color/button_white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="2.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.4"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonMemPlus"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_citizen"
                    android:text="M+"
                    android:textColor="@color/button_white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonMemMinus"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_citizen"
                    android:text="M-"
                    android:textColor="@color/button_white"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_citizen"
                    android:text="0"
                    android:textColor="@color/button_white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonMemRecall"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_citizen"
                    android:text="MRC"
                    android:textColor="@color/button_white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button00"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_citizen"
                    android:text="00"
                    android:textColor="@color/button_white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonDecimalAll"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_citizen"
                    android:text="•"
                    android:textColor="@color/button_white"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonPlus"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_citizen"
                    android:text="+"
                    android:textColor="@color/button_white"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonMinus"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_citizen"
                    android:text="-"
                    android:textColor="@color/button_white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonEquals"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_citizen"
                    android:text="="
                    android:textColor="@color/button_white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>