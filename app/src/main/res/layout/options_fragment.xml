<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff263238"
    android:orientation="vertical">

    <Button
        android:id="@+id/bHistory"
        style="@style/button_black_vertical"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="2.0"
        android:text="History"
        android:textAppearance="?android:textAppearanceLarge" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="2.0"
        android:visibility="gone"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bShareTape"
            style="@style/button_black_big"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="Send Calculation"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/bThemes"
            style="@style/button_black_big"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="Themes"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cbFormat"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:text="Indian Number Format"
        android:textAppearance="?android:textAppearanceMedium" />

    <CheckBox
        android:id="@+id/cbVibrate"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:text="Vibrate On Press"
        android:textAppearance="?android:textAppearanceMedium" />

    <CheckBox
        android:id="@+id/cbSound"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:text="Sound on Press"
        android:textAppearance="?android:textAppearanceMedium" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="2.0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bHelp"
            style="@style/button_black_big"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="Help"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ff99cc00" />

        <Button
            android:id="@+id/bRate"
            style="@style/button_black_big"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="Rate App"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ffff8800" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="2.0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bShareApp"
            style="@style/button_black_big"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="Share App"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ffff4444" />

        <Button
            android:id="@+id/bEmailDev"
            style="@style/button_black_big"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="Email Devoloper"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ff0099cc" />
    </LinearLayout>
</LinearLayout>