<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff202020"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="2.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="3.0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStep"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="left|center" />

                <TextView
                    android:id="@+id/tvMemory"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.0"
                    android:background="#ffffffff"
                    android:gravity="center"
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/tvCheck"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="CHK"
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/tvCorrect"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="CRT"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="3.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAnswer"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="9.0"
                    android:gravity="end|center"
                    android:text="DEC" />

                <TextView
                    android:id="@+id/tvOperation"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.0"
                    android:gravity="right|center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonCheckRight"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2.0dip"
            android:layout_weight="2.0"
            android:background="@drawable/check1" />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2.0dip"
            android:layout_weight="2.0"
            android:background="@drawable/correct1" />

        <Button
            android:id="@+id/buttonAllClear"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2.0dip"
            android:layout_marginLeft="2.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/button_green"
            android:drawableLeft="@drawable/ic_ac_on"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="6.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonMemPlus"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"

               
                android:background="@drawable/button_black_slector"
                android:text="M+" />

            <Button
                android:id="@+id/buttonMemMinus"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="M-" />

            <Button
                android:id="@+id/buttonMemRecall"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="MRC" />

            <Button
                android:id="@+id/buttonSqrt"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="√" />

            <Button
                android:id="@+id/buttonMarkUp"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="MU" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="9" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="÷" />

            <Button
                android:id="@+id/buttonPlusMinus"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="+/-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="6" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="X" />

            <Button
                android:id="@+id/buttonPercentage"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/button_black_slector"
                android:text="%" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="2.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_black_slector"
                    android:text="1" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_black_slector"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_black_slector"
                    android:text="2" />

                <Button
                    android:id="@+id/button00"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_black_slector"
                    android:text="00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_black_slector"
                    android:text="3" />

                <Button
                    android:id="@+id/buttonDecimalAll"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_black_slector"
                    android:text="•" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonPlus"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_black_slector"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonMinus"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_black_slector"
                    android:text="-" />

                <Button
                    android:id="@+id/buttonEquals"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_black_slector"
                    android:text="=" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>